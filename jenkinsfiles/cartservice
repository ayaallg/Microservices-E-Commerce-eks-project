pipeline {
    agent any

    environment {
        IMAGE_NAME     = "cartservice" 
        YAML_FILE      = "cartservice.yaml"
        DOCKER_USER    = "ayaallg" 
        DOCKER_REPO    = "${DOCKER_USER}/${IMAGE_NAME}"
        GIT_REPO       = "Microservices-E-Commerce-eks-project"
        GIT_USER       = "ayaallg"
        GIT_EMAIL      = "aya.allag@univ-constantine2.dz"
    }

    stages {
        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'master', url: "https://github.com/${GIT_USER}/${GIT_REPO}.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // On cherche o√π se trouve le fichier .csproj pour d√©finir le bon dossier racine
                    def projectDir = sh(script: "find . -name 'cartservice.csproj' -exec dirname {} \\; | head -n 1", returnStdout: true).trim()
                    
                    if (!projectDir) {
                        error "‚ùå Fichier cartservice.csproj introuvable dans le d√©p√¥t !"
                    }

                    echo "‚úÖ Dossier projet d√©tect√© : ${projectDir}"

                    dir("${projectDir}") {
                        sh """
                            # On v√©rifie si le Dockerfile est ici ou dans un parent
                            DF_PATH=\$(find . -maxdepth 2 -iname "Dockerfile" | head -n 1)
                            
                            if [ -z "\$DF_PATH" ]; then
                                # Si pas trouv√© dans le dossier du projet, on regarde un niveau au dessus
                                DF_PATH="../Dockerfile"
                            fi

                            echo "üöÄ Lancement du build avec Dockerfile: \$DF_PATH"
                            docker build -t ${DOCKER_REPO}:latest -f "\$DF_PATH" .
                        """
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', 
                                     passwordVariable: 'DOCKER_PASS', 
                                     usernameVariable: 'DOCKER_ID')]) {
                        sh "echo \${DOCKER_PASS} | docker login -u \${DOCKER_ID} --password-stdin"
                        sh "docker tag ${DOCKER_REPO}:latest ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"
                            git remote set-url origin https://${GIT_USER}:\${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git
                            git pull origin master --rebase
                            sed -i "s#image:.*#image: ${DOCKER_REPO}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} image to ${BUILD_NUMBER} [skip ci]" || echo "No changes"
                            git push origin master
                        """
                    }
                }
            }
        }
    }
}
