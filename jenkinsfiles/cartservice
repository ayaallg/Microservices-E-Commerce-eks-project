pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        AWS_ACCOUNT_ID = "471112686466"
        ECR_REPO = "cartservice"                // âœ… Repo correct
        ECR_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}"
        GIT_REPO = "Microservices-E-Commerce-eks-project"
        GIT_USER = "melbouls"
        GIT_EMAIL = "melissasaraboulsan@gmail.com"
        YAML_FILE = "cartservice.yaml"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'master',
                    url: "https://github.com/${GIT_USER}/${GIT_REPO}.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('src/cartservice') {
                    sh '''
                        # Nettoyer les anciennes images / cache
                        docker system prune -f || true

                        # Build Docker
                        if [ ! -f Dockerfile ]; then
                            echo "Dockerfile introuvable dans $(pwd)"
                            exit 1
                        fi
                        docker build -t ${ECR_REPO}:latest .
                    '''
                }
            }
        }

        stage('Login to ECR') {
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${ECR_URI}
                '''
            }
        }

        stage('Tag & Push Image to ECR') {
            steps {
                sh '''
                    docker tag ${ECR_REPO}:latest ${ECR_URI}:${BUILD_NUMBER}
                    docker push ${ECR_URI}:${BUILD_NUMBER}

                    # Optionnel : tag latest pour tests rapides
                    docker tag ${ECR_REPO}:latest ${ECR_URI}:latest
                    docker push ${ECR_URI}:latest
                '''
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            # Remplacer l'image dans le YAML
                            sed -i "s#image:.*#image: ${ECR_URI}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update cartservice image to ${BUILD_NUMBER}"
                            git push https://${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git master
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                    # Appliquer le YAML sur ton cluster EKS
                    kubectl apply -f kubernetes-files/${YAML_FILE} --context lab-eks-cluster
                '''
            }
        }
    }
}
