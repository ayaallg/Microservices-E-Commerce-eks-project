pipeline {
    agent any

    environment {
        // --- CONFIGURATION DOCKER HUB ---
        DOCKER_USER    = "ayaallg" 
        IMAGE_NAME     = "adservice" 
        DOCKER_REPO    = "${DOCKER_USER}/${IMAGE_NAME}"
        
        // --- CONFIGURATION GITHUB ---
        GIT_REPO       = "Microservices-E-Commerce-eks-project"
        GIT_USER       = "ayaallg"
        GIT_EMAIL      = "aya.allag@univ-constantine2.dz"
        YAML_FILE      = "adservice.yaml"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                // Récupère le code source
                git branch: 'master', 
                    url: "https://github.com/${GIT_USER}/${GIT_REPO}.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Entre dans le dossier src pour construire l'image
                    dir("src/${IMAGE_NAME}") {
                        sh "docker build -t ${DOCKER_REPO}:latest ."
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Utilise l'ID 'docker-hub-creds' avec ton nouveau token (Read/Write/Delete)
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', 
                                     passwordVariable: 'DOCKER_PASS', 
                                     usernameVariable: 'DOCKER_ID')]) {
                        
                        // Connexion et envoi de l'image
                        sh "echo \${DOCKER_PASS} | docker login -u \${DOCKER_ID} --password-stdin"
                        sh "docker tag ${DOCKER_REPO}:latest ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                // Entre dans le dossier où se trouve ton fichier adservice.yaml
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            # Remplace l'image ECR par ton image Docker Hub
                            # Le symbole # est utilisé comme séparateur pour éviter les conflits avec les /
                            sed -i "s#image:.*#image: ${DOCKER_REPO}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} image to ${DOCKER_REPO}:${BUILD_NUMBER} [skip ci]" || echo "No changes to commit"
                            git push https://${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git master
                        """
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "✅ Pipeline réussi pour ${IMAGE_NAME} !"
            echo "Nouvelle image : ${DOCKER_REPO}:${BUILD_NUMBER}"
        }
        failure {
            echo "❌ Échec du pipeline. Vérifiez les permissions Docker Hub ou le chemin Git."
        }
    }
}
