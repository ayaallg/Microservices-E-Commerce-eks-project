pipeline {
    agent any

    environment {
        // --- CONFIGURATION DOCKER HUB ---
        DOCKER_USER    = "ayaallg" 
        IMAGE_NAME     = "adservice" // À modifier pour chaque service (ex: emailservice, frontend...)
        DOCKER_REPO    = "${DOCKER_USER}/${IMAGE_NAME}"
        
        // --- CONFIGURATION GITHUB ---
        GIT_REPO       = "Microservices-E-Commerce-eks-project"
        GIT_USER       = "ayaallg"
        GIT_EMAIL      = "aya.allag@univ-constantine2.dz"
        YAML_FILE      = "adservice.yaml" // À modifier selon le service (ex: emailservice.yaml)
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                // Récupère ton code depuis ton dépôt GitHub
                git branch: 'master', 
                    url: "https://github.com/${GIT_USER}/${GIT_REPO}.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Entre dans le dossier src du service spécifique
                    dir("src/${IMAGE_NAME}") {
                        sh "docker build -t ${DOCKER_REPO}:latest ."
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Utilise l'ID 'docker-hub-creds' que tu as créé
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', 
                                     passwordVariable: 'DOCKER_PASS', 
                                     usernameVariable: 'DOCKER_ID')]) {
                        
                        // Connexion sécurisée et envoi de l'image
                        sh "echo \${DOCKER_PASS} | docker login -u \${DOCKER_ID} --password-stdin"
                        sh "docker tag ${DOCKER_REPO}:latest ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                // On suppose que tes fichiers .yaml sont dans un dossier nommé 'kubernetes-files'
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            # Met à jour la ligne 'image:' dans ton fichier YAML
                            sed -i "s#image:.*#image: ${DOCKER_REPO}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} image to ${DOCKER_REPO}:${BUILD_NUMBER} [skip ci]" || echo "No changes"
                            git push https://${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git master
                        """
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "✅ Félicitations Aya ! L'image est sur Docker Hub et GitHub est à jour."
        }
        failure {
            echo "❌ Le pipeline a échoué. Vérifie la console Jenkins."
        }
    }
}
