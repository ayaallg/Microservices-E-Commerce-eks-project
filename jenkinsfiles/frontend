pipeline {
    agent any

    environment {
        IMAGE_NAME     = "frontend" 
        YAML_FILE      = "frontend.yaml"
        DOCKER_USER    = "ayaallg" 
        DOCKER_REPO    = "${DOCKER_USER}/${IMAGE_NAME}"
        GIT_REPO       = "Microservices-E-Commerce-eks-project"
        GIT_USER       = "melbouls" 
        GIT_EMAIL      = "melissasaraboulsan@gmail.com"
    }

    stages {
        stage('Clean Workspace') { steps { cleanWs() } }

        stage('Checkout from Git') {
            steps {
                git branch: 'master', 
                    url: "https://github.com/${GIT_USER}/${GIT_REPO}.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("src/${IMAGE_NAME}") {
                    sh "docker build -t ${DOCKER_REPO}:latest ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', 
                                     passwordVariable: 'DOCKER_PASS', 
                                     usernameVariable: 'DOCKER_ID')]) {
                        sh "echo \${DOCKER_PASS} | docker login -u \${DOCKER_ID} --password-stdin"
                        sh "docker tag ${DOCKER_REPO}:latest ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            # 1. Mise à jour du fichier
                            sed -i "s#image:.*#image: ${DOCKER_REPO}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            # 2. Préparation du commit
                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} image to ${BUILD_NUMBER} [skip ci]" || echo "No changes"

                            # 3. PUSH FORCÉ AVEC AUTHENTICITÉE EXPLICITE
                            # Cette commande ignore la config 'origin' et injecte le token directement
                            git push https://${GIT_USER}:\${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git master
                        """
                    }
                }
            }
        }
    }

    post {
        always { sh "docker logout" }
    }
}
